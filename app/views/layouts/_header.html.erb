<div class="cover">
  <div class="cover-caption">
    <h1 class="jumbotron-heading">Photo Biz</h1>
    <p class="lead">Make Your happy memory last</p>
    <p>
      <% if !current_user %>
        <%= link_to 'Sign Up Today', new_user_registration_path, class: 'btn btn-secondary' %>
      <% end %>
    </p>
  </div>
</div>


<div class="container mt-4">
  <div class="row">
    <div class="col-sm-5">
      <% flash.each do |name, msg| %>
        <div class='alert alert-<%= name %>'>
          <%= msg %>
        </div>
      <% end %>
    </div>
  </div>

</div>
